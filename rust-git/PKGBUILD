_realname=rust
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}-git"
pkgdesc='Rust, a system programming language'
arch=('any')
pkgver=1.16.0.20170101
pkgrel=1
url='http://www.rust-lang.org'
license=('MIT' 'Apache 2.0')
provides=("${MINGW_PACKAGE_PREFIX}-${_realname}}")
depends=("${MINGW_PACKAGE_PREFIX}-gcc-libs")
makedepends=('bison' 'flex' 'git' "${MINGW_PACKAGE_PREFIX}-cmake" "${MINGW_PACKAGE_PREFIX}-gcc" "${MINGW_PACKAGE_PREFIX}-llvm" "${MINGW_PACKAGE_PREFIX}-python2")
install='rust.install'
source=(
  'git+https://github.com/rust-lang/rust'
  '0001-Unstaged.patch'
)

pkgver() {
  cd "${_realname}"
  rel=`grep CFG_RELEASE_NUM= mk/main.mk | sed 's/CFG_RELEASE_NUM=//g'`
  date=`git log -1 --date=short --pretty=format:'%cd' | sed 's/-//g'`
  echo $rel.$date
}

prepare() {
  cd "${_realname}"
  git submodule update --init
}

build() {
  cd "${_realname}"
  patch -p1 < ../0001-Unstaged.patch
  ./configure --prefix=${MINGW_PREFIX} --llvm-root=${MINGW_PREFIX} --enable-fast-make --enable-ccache --enable-dist-host-only
  #--disable-rustbuild
  make -j4
}

check() {
  cd "${_realname}"
  make check
}

package() {
  cd "${_realname}"
  rm -rf build/tmp/dist/rust-src-\*-image
  mkdir $pkgdir/${MINGW_PREFIX}
  DESTDIR=$pkgdir make install
  rm $pkgdir/${MINGW_PREFIX}/bin/libgcc*.dll
  rm $pkgdir/${MINGW_PREFIX}/bin/libstdc*.dll
}

md5sums=('SKIP'
         'fe7eeaf2801293be606b33932e4c8b85')
