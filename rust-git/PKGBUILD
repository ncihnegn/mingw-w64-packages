_realname=rust
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}-git"
pkgdesc='Rust, a system programming language'
arch=('any')
pkgver=1.19.0.20170517
pkgrel=2
url='http://www.rust-lang.org'
license=('MIT' 'Apache 2.0')
provides=("${MINGW_PACKAGE_PREFIX}-${_realname}}")
depends=("${MINGW_PACKAGE_PREFIX}-gcc-libs")
makedepends=('bison' 'flex' 'git' "${MINGW_PACKAGE_PREFIX}-cmake" "${MINGW_PACKAGE_PREFIX}-gcc" "${MINGW_PACKAGE_PREFIX}-llvm" "${MINGW_PACKAGE_PREFIX}-python2")
install='rust.install'
source=(
  'git+https://github.com/rust-lang/rust'
  '0001-Unstaged.patch'
  '0001-rust-installer-Unstaged.patch'
)

pkgver() {
  cd "${_realname}"
  rel=`grep CFG_RELEASE_NUM: src/bootstrap/channel.rs | sed 's/.* = "//g' | sed 's/".*//g'`
  date=`git log -1 --date=short --pretty=format:'%cd' | sed 's/-//g'`
  echo $rel.$date
}

prepare() {
  cd "${_realname}"
  git submodule update --init
  patch -p1 < $srcdir/0001-Unstaged.patch
  cd src/tools/rust-installer
  patch -p1 < $srcdir/0001-rust-installer-Unstaged.patch
}

build() {
  cd "${_realname}"
  ./configure --prefix=${MINGW_PREFIX} --llvm-root=${MINGW_PREFIX} --enable-fast-make --enable-ccache --enable-dist-host-only --disable-dist-src
  #--disable-docs
  #--disable-rustbuild
  make -j4
}

check() {
  cd "${_realname}"
  make check
}

package() {
  cd "${_realname}"
  mkdir $pkgdir/${MINGW_PREFIX}
  DESTDIR=$pkgdir make install
  rm $pkgdir/${MINGW_PREFIX}/bin/libgcc*.dll
  rm $pkgdir/${MINGW_PREFIX}/bin/libstdc*.dll
  rm $pkgdir/${MINGW_PREFIX}/bin/libwinpthread*.dll
}

md5sums=('SKIP'
         '70f246f6065ca52007da2ed672374109'
         'a7c1a42128121a6f6701f2f3dd9da008')
md5sums=('SKIP'
         'e9824bef1fde7419caf8748518b51bb1'
         'a7c1a42128121a6f6701f2f3dd9da008')
